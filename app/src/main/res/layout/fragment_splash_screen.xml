<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rkhandavilli.popularmovies.SplashScreenFragment">

    <GridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/grid_view_spacing"
        android:columnWidth="@dimen/movie_poster_width"
        android:drawSelectorOnTop="true"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/grid_view_vertical_spacing"
        android:horizontalSpacing="@dimen/grid_view_spacing"
        android:stretchMode="spacingWidthUniform"
        tools:context=".SplashScreenFragment"
        android:id="@+id/movies_grid">
    </GridView>

</FrameLayout>
